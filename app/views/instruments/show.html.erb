<div class="container">
  <div class="row">
    <div class="col">
      <div class="instrument-show-title ">
        <label for="category", class="instrument-category-show"> <%= @instrument.category %> </label>
        <h1 class="text-center"> <%= @instrument.name %> </h1>
        <h3> <%= @instrument.location %> </h3>
        <div class="d-flex justify-content-center align-items-center">
          <p class="mr-3 mb-0"> <%= @instrument.owner.username %> </p>
          <%= cl_image_tag @instrument.owner.avatar.key, alt: "alttext", width: 50, height: 50, crop: :fill, style: "border-radius: 50%;" %>
        </div>
      </div>
      <div class="text-center m-5">
        <%= cl_image_tag @instrument.photo.key, alt: "alttext", width: 550, height: 270, crop: :fill %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <div class="details-instrument">
        <h3>description</h3>
        <p> <%= @instrument.description %> </p>
      </div>
    </div>
    <div class="col-lg-4 bg-black">
      <%= simple_form_for [@instrument, @rental_request] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.button :submit, "louer pour #{@instrument.price_per_day}â‚¬/jour", class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>

