<% CATEGORY = ["instrument à vent", "instrument à corde", "percussion", "clavier"] %>
<%= simple_form_for([@owner, @instrument]) do |f| %>
  <%= f.input :name %>
  <%= f.input :category, collection: CATEGORY %>
  <%= f.input :description %>
  <%= f.input :price_per_day, collection: 0..25%>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: "btn btn-ghost" %>
<% end %>
